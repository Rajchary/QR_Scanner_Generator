<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ScanHelper">

    <Button
        android:id="@+id/camera"
        android:layout_width="279dp"
        android:layout_height="81dp"
        android:background="@drawable/custom_button_generate_activity"
        android:drawableEnd="@drawable/ic_baseline_camera_alt_64"
        android:fontFamily="@font/abril_fatface"
        android:paddingHorizontal="25dp"
        android:text="@string/camera"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="279dp"
        android:layout_height="81dp"
        android:background="@drawable/custom_button_generate_activity"
        android:drawableEnd="@drawable/ic_baseline_insert_photo_64"
        android:fontFamily="@font/abril_fatface"
        android:paddingHorizontal="25dp"
        android:text="@string/gallery"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.803" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="307dp"
        android:layout_height="342dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qr_logo_2" />

</androidx.constraintlayout.widget.ConstraintLayout>