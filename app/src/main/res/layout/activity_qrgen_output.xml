<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QRGenOutput"
    android:background="@color/teal_700">

    <ImageView
        android:id="@+id/output"
        android:layout_width="287dp"
        android:layout_height="246dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296"
        app:srcCompat="@drawable/ic_baseline_qr_code_24" />

    <Button
        android:id="@+id/download"
        android:layout_width="279dp"
        android:layout_height="81dp"
        android:background="@drawable/custom_button_generate_activity"
        android:drawableEnd="@drawable/ic_baseline_arrow_circle_down_64"
        android:fontFamily="@font/abril_fatface"
        android:paddingHorizontal="15dp"
        android:text="@string/download"
        android:textColor="#DD0606"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />

    <Button
        android:id="@+id/back"
        android:layout_width="279dp"
        android:layout_height="81dp"
        android:background="@drawable/custom_button_generate_activity"
        android:drawableStart="@drawable/ic_baseline_arrow_back_ios_64"
        android:fontFamily="@font/abril_fatface"
        android:paddingHorizontal="20dp"
        android:text="@string/go_back"
        android:textAlignment="viewStart"
        android:textColor="#DC0B0B"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />
</androidx.constraintlayout.widget.ConstraintLayout>